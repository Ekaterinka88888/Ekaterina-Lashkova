
a = input("Введите с заглавной буквы первый цвет: ")

if a != "Красный" and a != "Жёлтый" and a != "Синий":
    print ("Введен не основной цвет")
    raise SystemExit

b = input("Введите с заглавной буквы второй цвет: ")

if b != "Красный" and b != "Жёлтый" and b != "Синий":
    print("Введен не основной цвет")
    raise SystemExit

if a == "Красный" or a == "Синий":
    if b == "Красный" or b == "Синий":
        print ("Фиолетовый")

if a == "Красный" or a == "Жёлтый":
    if b == "Красный" or b == "Жёлтый":
        print ("Оранжевый")

if a == "Желтый" or a == "Синий":
    if b == "Синий" or b == "Жёлтый":
        print ("Зелёный")
